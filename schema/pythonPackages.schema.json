{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PythonPackagesConfig",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "packageRoot": { "type": "string" },
          "pyproject": { "type": "string" }
        },
        "required": ["name", "packageRoot", "pyproject"]
      }
    }
  },
  "required": ["version", "packages"]
}