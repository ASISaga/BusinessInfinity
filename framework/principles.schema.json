{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Legendary Principles",
  "type": "object",
  "properties": {
    "principles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "principle_id",
          "domain",
          "legend_source",
          "form",
          "summary",
          "operational_mapping",
          "failure_modes",
          "success_metrics"
        ],
        "properties": {
          "principle_id": { "type": "string" },
          "domain": { "type": "string", "enum": ["Funding", "Product", "Market", "Ops", "People", "Legal"] },
          "legend_source": { "type": "string" },
          "form": { "type": "string", "enum": ["aphorism", "case_study", "decision_rubric"] },
          "summary": { "type": "string" },
          "operational_mapping": { "type": "array", "items": { "type": "string" } },
          "failure_modes": { "type": "array", "items": { "type": "string" } },
          "success_metrics": { "type": "array", "items": { "type": "string" } },
          "evidence_bindings": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  },
  "required": ["principles"]
}