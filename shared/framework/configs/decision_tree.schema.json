{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decision Tree",
  "type": "object",
  "properties": {
    "tree_id": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["node_id", "role", "prompt", "outputs"],
        "properties": {
          "node_id": { "type": "string" },
          "role": { "type": "string", "enum": ["Founder", "Investor", "CEO", "CFO", "CTO", "CMO"] },
          "legend_modes": { "type": "array", "items": { "type": "string" } },
          "prompt": { "type": "string" },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["label", "criteria"],
              "properties": {
                "label": { "type": "string" },
                "criteria": { "type": "string" },
                "next_node": { "type": "string" }
              }
            }
          },
          "governance": {
            "type": "object",
            "properties": {
              "min_legends": { "type": "integer", "minimum": 1 },
              "blend": { "type": "string", "enum": ["mean", "median", "weighted"] },
              "weights": { "type": "object", "additionalProperties": { "type": "number" } },
              "review_required": { "type": "boolean" }
            }
          }
        }
      }
    }
  },
  "required": ["tree_id", "nodes"]
}