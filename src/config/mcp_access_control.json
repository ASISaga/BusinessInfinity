    "progressive_stages": {
      "observer": {
        "duration_days": 14,
        "description": "Agent observes boardroom activities with minimal access",
        "default_access": "read_only",
        "allowed_mcps": ["linkedin", "reddit"],
        "restrictions": {
          "max_decisions_per_day": 2,
          "requires_approval": true,
          "allowed_decision_types": ["informational"]
        }
      },
      "participant": {
        "duration_days": 60,
        "description": "Agent participates in decisions with limited operational access",
        "default_access": "limited_write",
        "allowed_mcps": ["linkedin", "reddit", "erpnext"],
        "restrictions": {
          "max_decisions_per_day": 10,
          "requires_approval": false,
          "allowed_decision_types": ["operational", "informational"]
        }
      },
      "trusted": {
        "duration_days": -1,
        "description": "Agent has full boardroom participation and system access",
        "default_access": "admin",
        "allowed_mcps": ["linkedin", "reddit", "erpnext", "businessinfinity_config"],
        "restrictions": {
          "max_decisions_per_day": -1,
          "requires_approval": false,
          "allowed_decision_types": ["strategic", "financial", "operational", "investment", "product", "market", "governance"]
        }
      }
    }
  },
  "audit": {
    "enabled": true,
    "log_all_access": true,
    "log_denied_access": true,
    "retention_days": 90,
    "alert_on_violations": true
  }
}